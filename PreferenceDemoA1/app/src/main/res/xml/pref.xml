<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:enabled="true"
        android:title="Wi-Fi 및 네트워크 설정">
        <CheckBoxPreference
            android:key="wifi"
            android:summary="Wi-Fi 켜기"
            android:title="Wi-Fi"/>
        <ListPreference
            android:dialogTitle="데이터 네트워크 설정"
            android:entries="@array/networks"
            android:entryValues="@array/network_codes"
            android:key="network"
            android:summary="과금 되는 데이터 네트워크 연결방식 설정"
            android:title="데이터 네트워크 설정"/>
    </PreferenceCategory>



    <PreferenceCategory
        android:title="Bluetooth 및 장치이름 설정">
        <CheckBoxPreference
            android:key="bluetooth"
            android:summary="Bluetooth 켜기"
            android:title="Bluetooth"/>
        <EditTextPreference
            android:dialogTitle="장치이름"
            android:key="device"
            android:summary="장치 이름을 설정하세요"
            android:title="장치이름"/>
    </PreferenceCategory>





</PreferenceScreen>